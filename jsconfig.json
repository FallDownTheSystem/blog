{
	"compilerOptions": {
		"baseUrl": ".",
		"module": "esnext",
		"target": "esnext",
		"lib": [
			"DOM",
			"ESNext"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"types": [
			"vite/client"
		],
		"paths": {
			"~/*": [
				"src/*"
			]
		}
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}